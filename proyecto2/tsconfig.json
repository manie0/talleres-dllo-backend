{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".", 

    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "jest"],

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "jsx": "preserve",

    "skipLibCheck": true,
    "isolatedModules": false,

    "resolveJsonModule": true,
    "allowJs": true
  },

  "include": ["src", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
